<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mainHeadingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/enter_song_details"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/songNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainHeadingTextView"
        android:layout_marginTop="16dp"
        android:autofillHints=""
        android:hint="@string/song_name"
        android:minHeight="48dp"
        tools:ignore="VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/songArtistTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/songNameTextView"
        android:layout_marginTop="8dp"
        android:hint="@string/song_artist"
        android:minHeight="48dp"
        android:textColorHint="#546E7A"
        tools:ignore="VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/songYearTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/songArtistTextView"
        android:layout_marginTop="8dp"
        android:autofillHints=""
        android:hint="@string/song_year"
        android:minHeight="48dp"
        tools:ignore="VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/songDurationTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/songYearTextView"
        android:layout_marginTop="8dp"
        android:hint="@string/song_duration"
        android:minHeight="48dp"
        android:textColorHint="#546E7A"
        tools:ignore="VisualLintTextFieldSize" />

    <Button
        android:id="@+id/submitSongButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/songDurationTextView"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="@string/submit_song" />

    <TextView
        android:id="@+id/songsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/submitSongButton"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/outputTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/songsTextView"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/outputTextView"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:text="@string/play" />

    <Button
        android:id="@+id/pauseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/outputTextView"
        android:layout_toEndOf="@id/playButton"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/pause" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/outputTextView"
        android:layout_toEndOf="@id/pauseButton"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/stop" />

    <Button
        android:id="@+id/favouriteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/outputTextView"
        android:layout_toEndOf="@id/stopButton"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/favourite" />

</RelativeLayout>
